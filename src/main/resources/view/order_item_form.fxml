<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" stylesheets="@css/inventory_styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.orderItem.OrderItemFormController">
    <children>

        <!-- Title Label -->
        <Label layoutX="6.0" layoutY="6.0" prefHeight="60.0" prefWidth="654.0" style="-fx-background-color: #218c74;" styleClass="title-label" text="                                       Order Item Management">
         <font>
            <Font size="22.0" />
         </font></Label>

        <!-- Search Section -->
        <HBox layoutX="20.0" layoutY="80.0" spacing="10">
            <JFXTextField fx:id="txtSearchOrderItem" prefHeight="30.0" prefWidth="255.0" promptText="Enter Order ID or Product Name" />
            <JFXButton onAction="#btnSearchOrderItemOnAction" prefHeight="32.0" prefWidth="85.0" style="-fx-background-color: #b8e994;" text="Search" />
        </HBox>

        <!-- Order Items Table -->
        <TableView fx:id="orderItemTable" layoutX="10.0" layoutY="127.0" prefHeight="199.0" prefWidth="645.0" style="-fx-background-color: #fad390;">
            <columns>
                <TableColumn fx:id="colOrderId" prefWidth="120.0" text="Order ID" />
                <TableColumn fx:id="colProductId" prefWidth="120.0" text="Product ID" />
                <TableColumn fx:id="colProductName" prefWidth="164.6666259765625" text="Product Name" />
                <TableColumn fx:id="colQuantity" prefWidth="101.99990844726562" text="Quantity" />
                <TableColumn fx:id="colTotalPrice" prefWidth="136.6666259765625" text="Total Price" />
            </columns>
        </TableView>

        <!-- Add Order Item Form -->
        <VBox layoutX="43.0" layoutY="346.0" prefHeight="209.0" prefWidth="327.0" spacing="15">
            <Label prefHeight="39.0" prefWidth="341.0" styleClass="form-title" text="           Add New Order Item">
            <font>
               <Font size="15.0" />
            </font></Label>

            <!-- Product ID Field -->
            <HBox spacing="10">
                <JFXTextField fx:id="txtProductId" prefHeight="30.0" promptText="Enter Product ID" />
                <JFXTextField fx:id="txtProductName" prefHeight="30.0" promptText="Enter Product Name" />
            </HBox>

            <!-- Quantity Field -->
            <HBox spacing="10">
                <JFXTextField fx:id="txtQuantity" prefHeight="30.0" promptText="Enter Quantity" />
                <JFXTextField fx:id="txtTotalPrice" prefHeight="30.0" promptText="Enter Total Price" />
            </HBox>

            <!-- Action Buttons -->
            <HBox alignment="CENTER" prefHeight="33.0" prefWidth="260.0" spacing="20">
                <JFXButton onAction="#btnAddOrderItemOnAction" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #b8e994;" text="Add Item" />
                <JFXButton onAction="#btnClearFieldsOnAction" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #b8e994;" text="Clear Fields" />
            </HBox>
        </VBox>

        <!-- Order Item Actions -->
        <HBox layoutX="400.0" layoutY="514.0" spacing="10" />
         <JFXButton layoutX="509.0" layoutY="394.0" onAction="#btnDeleteOrderItemOnAction" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #b8e994;" text="Remove Item" />

    </children>
</AnchorPane>
