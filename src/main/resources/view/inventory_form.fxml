<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXComboBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="600.0" stylesheets="@css/inventory_styles.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.inventory.InventoryFormController">
    <children>

        <Label prefHeight="65.0" prefWidth="625.0" style="-fx-background-color: #218c74;" styleClass="title-label" text="                         Inventory Management" textFill="#963232" wrapText="true">
         <font>
            <Font size="25.0" />
         </font></Label>

        <!-- Search Section -->
        <HBox layoutX="16.0" layoutY="282.0" spacing="10">
            <JFXTextField fx:id="txtSearch" prefHeight="25.0" prefWidth="176.0" promptText="Enter Product Name or ID" />
            <JFXButton onAction="#btnSearchOnAction" prefHeight="32.0" prefWidth="85.0" style="-fx-background-color: #3c6382;" text="Search" textFill="#f2eeee" />
        </HBox>

        <!-- Inventory Table -->
        <TableView fx:id="inventoryTable" layoutX="16.0" layoutY="82.0" prefHeight="167.0" prefWidth="595.0" style="-fx-background-color: #fad390;">
            <columns>
                <TableColumn fx:id="colProductId" prefWidth="87.99999713897705" text="Product ID" />
                <TableColumn fx:id="colProductName" prefWidth="106.66666412353516" text="Product Name" />
                <TableColumn fx:id="colCategory" prefWidth="86.66661071777344" text="Category" />
                <TableColumn fx:id="colPrice" prefWidth="94.0" text="Price" />
                <TableColumn fx:id="colQuantity" prefWidth="95.3333740234375" text="Quantity" />
                <TableColumn fx:id="colSupplier" prefWidth="124.00003051757812" text="Supplier" />
            </columns>
        </TableView>
        <JFXTextField fx:id="txtUpdateStock" layoutX="27.0" layoutY="389.0" prefHeight="25.0" prefWidth="103.0" promptText="Enter Quantity" />
        <JFXButton layoutX="199.0" layoutY="387.0" onAction="#btnUpdateStockOnAction" prefHeight="30.0" prefWidth="87.0" style="-fx-background-color: #3c6382;" text="Update Stock" textFill="#f8f0f0" />

        <!-- New Product Entry Section -->
        <Label layoutX="397.0" layoutY="267.0" prefHeight="30.0" prefWidth="171.0" text="Add New Product:">
         <font>
            <Font name="System Italic" size="15.0" />
         </font></Label>
        <JFXTextField fx:id="txtProductName" layoutX="400.0" layoutY="314.0" promptText="Product Name" />
        <JFXTextField fx:id="txtCategory" layoutX="400.0" layoutY="352.0" promptText="Category" />
        <JFXTextField fx:id="txtPrice" layoutX="400.0" layoutY="389.0" promptText="Price" />
        <JFXTextField fx:id="txtQuantity" layoutX="400.0" layoutY="423.0" promptText="Quantity" />
        <JFXComboBox fx:id="cmbSupplier" layoutX="400.0" layoutY="458.0" promptText="Select Supplier" />
        <JFXButton layoutX="535.0" layoutY="451.0" onAction="#btnAddProductOnAction" prefHeight="32.0" prefWidth="83.0" style="-fx-background-color: #3c6382;" text="Add Product" textFill="#f4efef" />
    </children>
</AnchorPane>
